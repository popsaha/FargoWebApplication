        background: linear-gradient(45deg, #074434, #0a654d);
    }
    .card .bg-c-green .order-card{
        background: linear-gradient(45deg, #0a654d, #0e8666);
    }
    .card .bg-c-yellow .order-card{
        background: linear-gradient(45deg, #0e8666, #11a77f);
    }
    .card .bg-c-pink .order-card{
