
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Assets/js/jquery/jquery.min.js"></script>
<style>
    .label{       
        font-size: 15px;               
    }
    .label-success{
        background: linear-gradient(45deg, #074434, #0a654d);
    }
    .label-warning {
        background: linear-gradient(45deg, #074434, #0a654d);
    }
    .order-card{
        background: linear-gradient(45deg, #074434, #0e8666);
    }
